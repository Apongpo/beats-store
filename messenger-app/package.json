{
  "name": "messenger-app",
  "version": "1.0.0",
  "description": "A real-time messenger application built with React and Socket.io",
  "main": "server/server.js",
  "scripts": {
    "start": "node server/server.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/server.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-client": "cd client && npm install",
    "install-all": "npm install && npm run install-client"
  },
  "keywords": ["messenger", "chat", "socket.io", "react", "real-time"],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "cors": "^2.8.5",
    "uuid": "^9.0.0",
    "nodemon": "^3.0.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  }
}
